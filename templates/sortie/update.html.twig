{% extends 'base.html.twig' %}


{% block title %}{{ parent()}} | Modifier une sortie{% endblock %}

{% block body %}
    <div class="example-wrapper" style ="margin-top :50px;">





            {{form_start(updateForm)}}
            <p style="margin: auto;">{{form_row(updateForm.nom) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.dateHeureDebut) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.duree) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.dateLimiteInscription) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.nbInscriptionsMax) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.infosSortie) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.lieu) }}</p>
            <p style="margin: auto;">{{form_row(updateForm.campus) }}</p>





        </div>



        <p style="margin: auto;">{{form_row(updateForm.latitude) }}</p>
        <p style="margin: auto;">{{form_row(updateForm.longitude) }}</p>

        <div style ="margin-top : 20px;margin-bottom: 20px">
            <a href ="{{ path('sortie_list') }}" title ="Enregistrer les modifications">
                <button type="submit" class="btn btn-dark" style ="border-radius: 5px; ">Enregistrer</button>
            </a>
            <a href ="{{ path('sortie_publish', {'id': sortie.id}) }}" title ="Publier la sortie">
                <span type="submit" class="btn btn-dark" style ="border-radius: 5px; ">Publier</span>
            </a>
            <a href ="{{ path('sortie_list') }}" title ="Supprimer la sortie">
                <button type="submit" class="btn btn-dark" style ="border-radius: 5px; ">Supprimer</button>
            </a>
            <a href ="{{ path('sortie_cancel', {'id': sortie.id}) }}" title ="Annuler la sortie">
                <span class="btn btn-dark" style ="border-radius: 5px; ">Annuler</span>
            </a>
        </div>

        {{form_end(updateForm)}}




    </div>


{% endblock %}