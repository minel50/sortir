<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Sortir.com{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel='stylesheet' href="https://bootswatch.com/5/lux/bootstrap.min.css">
        {% block stylesheets %}
            <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    </head>
    <body>
        <div class="app-header-wrapper">
            <header>

                <nav id="navbar">
                    <a href="{{ path('sortie_list') }}">Sortir.com</a>


                    {% if app.user %}
                        {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{path('ville_liste') }}">Villes</a>
                        <a href="{{path('campus_liste') }}">Campus</a>
                        {% endif %}


                        <a href="{{ path('participant_gestionProfil')}}">Profil</a>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_home') }}">Espace Administrateur</a>
                        {% endif %}

                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% endif %}

                    <a onclick="toggleMenu()"><i class="fa fa-bars"></i></a>
                </nav>

            </header>
        </div>

        <main>
            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <p class="app-flash-{{ label }}">
                        {{ message }}
                    </p>
                {% endfor %}
            {% endfor %}

            {% block body %}
                <p>Ceci est le template base.html.twig</p>
            {% endblock %}
        </main>

        <div class="app-footer-wrapper">
            <footer>
                &copy; Claire - Thomas - Grégory - Août 2021
            </footer>
        </div>

        <script type="text/javascript" src="{{ asset('js/navbar.js') }}"></script>
        {% block javascripts %}
            <script src="/bootstrap/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
