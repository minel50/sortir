{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Reset mot de passe {% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialisation du mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entez votre adresse mail et nous vous enverrons un lien pour récupérer votre mot de passe
            </small>
        </div>

        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
