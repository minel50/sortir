{% extends 'base.html.twig' %}

{% block body %}

    {% block stylesheets %}
        {{ parent() }}
        <style>
            .my-custom-scrollbar {
                position:relative;
                width: 700px;
                height: 500px;
                overflow: auto;
            }
            .table-wrapper-scroll-y {
                display: block;
            }
            h3{
                text-align: center;

            }
            a{
                text-decoration: none;
                color:#000000;
            }
        </style>
    {% endblock %}

    <h4>Administration des participants </h4>
    <br>
    <div  class="table-wrapper-scroll-y my-custom-scrollbar">

        <table class="table table-bordered table-striped mb-0">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
                <th scope="col">Statut</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <div>
                <tbody>
                {% for p in participants %}

                    <tr>
                        <td>{{ p.pseudo }}</td>
                        <td>{{ p.prenom~' '}}{{ p.nom }}</td>

                        {# DÃ©sactive les boutons de suppression/modification sur les admin #}
                        {% if p.admin == 0 %}
                        <td>
                            {% if p.actif == 1 %}
                                <a class="btn btn-sm btn-success" href="{{ path('participant_desactiver', {'id': p.id}) }}">actif</a>
                            {% else %}
                                <a class="btn btn-sm btn-warning" href="{{ path('participant_activer', {'id': p.id}) }}">inactif</a>
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-sm btn-danger" href="{{ path('participant_supprimer', {'id': p.id}) }}" onclick="return confirm('Etes-vous certain de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                        </td>
                        {% else %}
                            <td></td>
                            <td></td>
                        {% endif %}

                    </tr>

                {% endfor %}
                </tbody>
            </div>
        </table>

    </div>



{% endblock %}

{% block title %}

{% endblock %}

